<button onclick="payWithStripe()" id="stripe-button">Buy the tickets.</button>
{% for data in events %}
  <div class="main-block">
    {{ data.description | raw }}
    <img src="{{ file_url(data.image_url) }}" alt="{{ data.image_alt }}">
    <div class="current_cart_tickets">
      {{ data.ordered_tickets_quantity }}{{ data.ordered_tickets_quantity_text }}
    </div>
  </div>
{% endfor %}
<script src="https://js.stripe.com/v3/"></script>
<script>
  function payWithStripe() {
    const CHECKOUT_SESSION_ID = {{ session_id|json_encode|raw }};
    const STRIPE_PUBLIC_KEY = {{ stripe_public_key|json_encode|raw }};
    
    let stripe = Stripe(STRIPE_PUBLIC_KEY);
    stripe.redirectToCheckout({
      sessionId: CHECKOUT_SESSION_ID
    }).then(function (result) {
      alert(result.error.message);
    });
  }
</script>
